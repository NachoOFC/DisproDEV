# Configuración para Vercel - Producción

APP_NAME=DisproDEV
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-vercel-domain.vercel.app

# Base de datos Neon (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_DATABASE=neondb
DB_USERNAME=neon_user
DB_PASSWORD=your-neon-password
DB_SSLMODE=require

# Cache y Session
CACHE_DRIVER=file
CACHE_STORE=file
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=sync

# Mail (Opcional - para notificaciones)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@dispro.dev
MAIL_FROM_NAME="${APP_NAME}"

# AWS (Opcional - para almacenamiento)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Otras configuraciones
LOG_CHANNEL=single
LOG_LEVEL=info

# API
SANCTUM_STATEFUL_DOMAINS=your-vercel-domain.vercel.app
SANCTUM_ENCRYPT_COOKIES=true
